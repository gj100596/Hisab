<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardLayoutList"
    android:layout_width="match_parent"
    android:layout_height="@dimen/cardview_height"
    android:layout_marginBottom="@dimen/standard_5"
    android:layout_marginLeft="@dimen/standard_10"
    android:layout_marginRight="@dimen/standard_10"
    android:layout_marginTop="@dimen/standard_5"
    android:elevation="@dimen/standard_5"
    android:orientation="vertical"
    android:padding="@dimen/standard_15"
    app:cardCornerRadius="@dimen/standard_5">

    <ImageView
        android:id="@+id/transactionTypeColor"
        android:layout_width="@dimen/standard_10"
        android:layout_height="match_parent"
        android:background="@android:color/holo_green_light"
        android:contentDescription="@string/amount_to_be_taken_card" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/standard_15"
            android:paddingRight="@dimen/standard_15"
            android:paddingTop="@dimen/standard_10"
            android:weightSum="3">

            <TextView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                android:textSize="40sp"
                android:singleLine="true"
                android:transitionName="@string/shared_transition_person_name" />

            <TextView
                android:id="@+id/amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/standard_10"
                android:layout_marginRight="@dimen/standard_10"
                android:layout_weight="2"
                android:ellipsize="end"
                android:singleLine="true"
                android:textAlignment="textEnd"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                android:textSize="40sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:paddingLeft="@dimen/standard_15"
            android:paddingStart="@dimen/standard_15" />


    </LinearLayout>


</android.support.v7.widget.CardView>

