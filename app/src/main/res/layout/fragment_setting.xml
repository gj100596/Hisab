<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/notification"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_marginBottom="@dimen/standard_10"
            android:layout_marginTop="@dimen/standard_10"
            android:background="#000000" />

        <Switch
            android:id="@+id/pendingRem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/pending_reminder"
            android:textColor="#878585"
            android:checked="true"
            android:textSize="20sp"/>

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_marginBottom="@dimen/standard_10"
            android:layout_marginTop="@dimen/standard_10"
            android:background="#000000" />
        <Switch
            android:id="@+id/notSound"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/notification_sound"
            android:checked="true"
            android:textColor="#878585"
            android:textSize="20sp"/>
        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_marginBottom="@dimen/standard_10"
            android:layout_marginTop="@dimen/standard_10"
            android:background="#000000" />
        <Switch
            android:id="@+id/notVibrate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/vibrate"
            android:textColor="#878585"
            android:checked="true"
            android:textSize="20sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/setting_heading_margin"
            android:text="@string/about"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_marginBottom="@dimen/standard_10"
            android:layout_marginTop="@dimen/standard_10"
            android:background="#000000" />

        <TextView
            android:id="@+id/faq"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/faq"
            android:textSize="20sp" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_marginBottom="@dimen/standard_10"
            android:layout_marginTop="@dimen/standard_10"
            android:background="#000000" />

        <TextView
            android:id="@+id/tandc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/terms_and_condition"
            android:textSize="20sp" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_marginBottom="@dimen/standard_10"
            android:layout_marginTop="@dimen/standard_10"
            android:background="#000000" />

        <TextView
            android:id="@+id/feedback"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/feedback"
            android:textSize="20sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/setting_heading_margin"
            android:text="@string/backup"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_marginBottom="@dimen/standard_10"
            android:layout_marginTop="@dimen/standard_10"
            android:background="#000000" />

        <TextView
            android:id="@+id/backup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/back"
            android:textSize="20sp" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_marginBottom="@dimen/standard_10"
            android:layout_marginTop="@dimen/standard_10"
            android:background="#000000" />

        <TextView
            android:id="@+id/restore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/restore"
            android:textSize="20sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/setting_heading_margin"
            android:text="@string/the_end"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_marginBottom="@dimen/standard_10"
            android:layout_marginTop="@dimen/standard_10"
            android:background="#000000" />

        <Button
            android:id="@+id/deleteAC"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/delete"
            android:text="@string/delete_account"
            android:textAlignment="center"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#FFFFFF" />
    </LinearLayout>

</ScrollView>
